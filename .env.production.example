# 生产环境配置示例

# -----------------------------------------------------------------------------
# Web Information
# -----------------------------------------------------------------------------
NEXT_PUBLIC_WEB_URL="https://your-domain.com"
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_PROJECT_NAME="感理识人系统"

# -----------------------------------------------------------------------------
# Database (生产环境 - 建议使用云数据库)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@your-db-host:5432/personality_system"

# -----------------------------------------------------------------------------
# Auth
# -----------------------------------------------------------------------------
AUTH_SECRET="your-production-secret-key-32-chars"
AUTH_URL="https://your-domain.com/api/auth"
AUTH_TRUST_HOST=true

# -----------------------------------------------------------------------------
# AI Service (OpenRouter)
# -----------------------------------------------------------------------------
OPENAI_API_KEY="sk-or-v1-your-production-key"
OPENAI_BASE_URL="https://openrouter.ai/api/v1"

# -----------------------------------------------------------------------------
# Storage (可选 - 用于文件上传)
# -----------------------------------------------------------------------------
STORAGE_ENDPOINT="https://cos.ap-guangzhou.myqcloud.com"
STORAGE_REGION="ap-guangzhou"
STORAGE_ACCESS_KEY=""
STORAGE_SECRET_KEY=""
STORAGE_BUCKET="personality-system"
STORAGE_DOMAIN="https://your-cdn-domain.com"

# -----------------------------------------------------------------------------
# Payment (微信支付/支付宝)
# -----------------------------------------------------------------------------
# 微信支付
WECHAT_PAY_APPID=""
WECHAT_PAY_MCHID=""
WECHAT_PAY_API_KEY=""
WECHAT_PAY_CERT_PATH=""

# 支付宝
ALIPAY_APPID=""
ALIPAY_PRIVATE_KEY=""
ALIPAY_PUBLIC_KEY=""

# -----------------------------------------------------------------------------
# Email (可选 - 用于通知)
# -----------------------------------------------------------------------------
SMTP_HOST="smtp.example.com"
SMTP_PORT="465"
SMTP_USER="noreply@your-domain.com"
SMTP_PASSWORD=""
SMTP_FROM="感理识人系统 <noreply@your-domain.com>"

# -----------------------------------------------------------------------------
# Monitoring (可选)
# -----------------------------------------------------------------------------
SENTRY_DSN=""
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""

# -----------------------------------------------------------------------------
# Other Settings
# -----------------------------------------------------------------------------
NODE_ENV="production"
NEXT_PUBLIC_LOCALE_DETECTION="false"
NEXT_PUBLIC_DEFAULT_THEME="system"
ADMIN_EMAILS="admin@your-domain.com"
